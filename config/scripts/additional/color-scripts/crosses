#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.
# Author: pfh
# Source: http://crunchbang.org/forums/viewtopic.php?pid=129265#p129265

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"   whitef="${esc}[37m"
  
  blackfbright="${esc}[90m";   redfbright="${esc}[91m";    greenfbright="${esc}[92m"
  yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   purplefbright="${esc}[95m"
  cyanfbright="${esc}[96m";    whitefbright="${esc}[97m"   whitefbright="${esc}[97m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}


# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.
# ****************************** Building blocks: ‚ñà ‚ñì ‚ñí ‚ñë ‚ñÑ ‚ñÄ ‚ñê ‚ñå ‚óè  ‚ïê ‚ïë ‚ïî ‚ï¶ ‚ïó ‚ïö ‚ï© ‚ïù ‚ñ† ‚ñ¨ ‚ñ≤ ‚ñº ‚óÑ ‚ñ∫ 

initializeANSI

cat << EOF

${redf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${greenf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${yellowf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${bluef} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${purplef} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${cyanf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà
${redf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${greenf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${yellowf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${bluef} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${purplef} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${cyanf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà
${redf} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${greenf} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${yellowf} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${bluef} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${purplef} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${cyanf} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà
${redf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${greenf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${yellowf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${bluef} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${purplef} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${cyanf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà
${redf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${greenf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${yellowf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${bluef} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${purplef} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${cyanf} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà
${redf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${greenf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${yellowf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${bluef} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${purplef} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${cyanf} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà
${boldon}
${redfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${greenfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${yellowfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${bluefbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${purplefbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${cyanfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà
${redfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${greenfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${yellowfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${bluefbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${purplefbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${cyanfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà
${redfbright} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${greenfbright} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${yellowfbright} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${bluefbright} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${purplefbright} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà ${cyanfbright} ‚ñà‚ñÑ‚ñÑ ‚ñÑ‚ñÑ‚ñà
${redfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${greenfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${yellowfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${bluefbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${purplefbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${cyanfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà
${redfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${greenfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${yellowfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${bluefbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${purplefbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà ${cyanfbright} ‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà
${redfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${greenfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${yellowfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${bluefbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${purplefbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ${cyanfbright} ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà
${reset}

EOF
